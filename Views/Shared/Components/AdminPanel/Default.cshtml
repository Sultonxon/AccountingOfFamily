@model bool
@if (Model)
{
    <li class="nav-item m-1">
        <a asp-action="Users" asp-controller="Admin"
           class="nav-link bg-primary text-white">Ползователи</a>
    </li>
}


<li class="nav-item m-1">
    <a asp-action="Index" asp-controller="Migration"
       class="nav-link bg-primary text-white">Миграции</a>
</li>

