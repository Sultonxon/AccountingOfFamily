{
    <li class="nav-item m-1">
        <form asp-action="Logout" asp-controller="Account" asp-route-returnUrl="@Context.Request.PathAndQuery()"
              class="nav-link bg-primary text-white">
            <button class="btn btn-outline-danger">Выйти</button>
        </form>
    </li>
}
