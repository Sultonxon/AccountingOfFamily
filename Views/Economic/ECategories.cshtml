@model ECategoriesViewModel


    <h4 class="bg-primary p-2">Все типи Затрати</h4>

    <a asp-action="Create" asp-controller="ECategory" asp-route-returnUrl="@Context.Request.PathAndQuery()"
       class="btn btn-primary">Добавить</a>
    <table class="table table-striped table-sm table-bordered ">
        <thead>
            <tr>
                <th>Имя категория</th>
                <th>Определение</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr class="place"><td colspan="3" class="text-center">No Data</td></tr>
            @foreach (var c in Model.ECategories)
            {
                <tr>
                    <td>@c.Name</td>
                    <td>@c.Description</td>
                    <td>
                        <form method="post" asp-action="Delete" asp-controller="ECategory"
                              asp-route-returnUrl="@Context.Request.PathAndQuery()">
                            <input type="hidden" name="id" value="@c.Id" />
                            <a asp-action="Edit" asp-controller="ECategory"
                               asp-route-returnUrl="@Context.Request.PathAndQuery()"
                               asp-route-id="@c.Id" class="btn btn-outline-primary">Edit</a>
                            <button type="submit" class="btn btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>