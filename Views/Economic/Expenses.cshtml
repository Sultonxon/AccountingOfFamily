@model PagedModel<Expense>

    <h4 class="bg-primary p-2">Затрати</h4>
    <a class="btn btn-primary" asp-action="Create" asp-controller="Expense"
       asp-route-returnUrl="@Context.Request.PathAndQuery()">Добавить</a>
    <table class="table table-striped table-sm table-bordered">
        <thead>
            <tr>
                <th>Имя владелеца</th>
                <th>Сумма</th>
                <th>Время</th>
                <th>Категория</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr class="place"><td colspan="5" class="text-center">No Data</td></tr>
            @foreach (var e in Model.Elements)
            {
                <tr>
                    <td>@e.AppUser.FirstName</td>
                    <td>@e.Amount</td>
                    <td>@e.DateExpense</td>
                    <td>@e.ECategory.Name</td>
                    <td>
                        <form method="post" asp-action="Delete" asp-controller="Expense"
                              asp-route-returnUrl="@Context.Request.PathAndQuery()">
                            <input type="hidden" name="id" value="@e.Id" />
                            <a class="btn btn-outline-primary" asp-route-id="@e.Id" asp-action="Edit"
                               asp-controller="Expense" asp-route-returnUrl="@Context.Request.PathAndQuery()">Редактировать</a>
                            <button class="btn btn-outline-danger" type="submit">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td class="text-right">Количесиво</td><td>@Model.Elements.Count()</td>
                <td class="text-right">Сумма</td><td colspan="2">@Model.Elements.Sum(e=>e.Amount)</td>
            </tr>
        </tfoot>
    </table>


    <ul class="pagination">
        
        @foreach (DateTime date in Model.Months)
        {
            <li class="page-item">
                <a class="page-link @((date.Year==Model.Year && date.Month==Model.Month) ? "active" : "")"
                   asp-action="Expenses" asp-route-year="@date.Year"
                   asp-route-month="@date.Month">@(date.Year+"."+date.Month)</a>
            </li>
        }
        
    </ul>