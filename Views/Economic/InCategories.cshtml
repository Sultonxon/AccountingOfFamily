@model InCategoriesViewModel


    <h4 class="bg-primary p-2">Все типи доходи</h4>

    <a class="btn btn-primary" asp-action="Create" asp-controller="InCategory"
       asp-route-returnUrl="@Context.Request.PathAndQuery()">Добавить</a>
    <table class="table table-striped table-sm table-bordered">
        <thead>
            <tr>
                <th>Имя </th>
                <th>Определение</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr class="place"><td colspan="3" class="text-center">No Data</td></tr>
            @foreach (var c in Model.InCategories)
            {
                <tr>
                    <td>@c.Name</td>
                    <td>@c.Description</td>
                    <td>
                        <form method="post" asp-action="Delete" asp-controller="InCategory"
                              asp-route-returnUrl="@Context.Request.PathAndQuery()">
                            <input type="hidden" name="Id" value="@c.Id" />
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-controller="inCategory"
                               asp-route-returnUrl="@Context.Request.PathAndQuery()" asp-route-id="@c.Id">Редактировать</a>
                            <button class="btn btn-outline-danger" type="submit">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>